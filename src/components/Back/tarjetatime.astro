
<body class="bg-gray-200 flex items-center justify-center h-screen">
    <div class="text-center">
        <h1 class="text-4xl font-bold mb-4">Conteo Regresivo</h1>

        <div class="max-w-md mx-auto bg-white rounded-md overflow-hidden shadow-md">
            <div class="p-4">
                <h2 class="text-2xl font-bold mb-4">Tiempo Restante</h2>
                <div id="contador" class="text-2xl font-bold mb-4">00:00:00</div>
                <button id="iniciarConteo" class="bg-blue-500 text-white px-4 py-2 rounded">Iniciar Conteo</button>
            </div>
        </div>
    </div>

    <script>
        let tiempoRestante;
        let intervalo;

        function actualizarContador() {
            const horas = Math.floor(tiempoRestante / 3600);
            const minutos = Math.floor((tiempoRestante % 3600) / 60);
            const segundos = tiempoRestante % 60;

            document.getElementById('contador').innerText = `${formatoDosDigitos(horas)}:${formatoDosDigitos(minutos)}:${formatoDosDigitos(segundos)}`;
        }

        function formatoDosDigitos(valor) {
            return valor < 10 ? `0${valor}` : valor;
        }

        function iniciarConteo() {
            intervalo = setInterval(() => {
                if (tiempoRestante > 0) {
                    tiempoRestante--;
                    actualizarContador();
                } else {
                    clearInterval(intervalo);
                    alert('Â¡Conteo Regresivo Finalizado!');
                }
            }, 1000);
        }

        document.getElementById('iniciarConteo').addEventListener('click', () => {
            tiempoRestante = 60; // Configura el tiempo en segundos
            iniciarConteo();
        });
    </script>
</body>
</html>
